<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arduino.propertyofss.arduinolearning.draglistview.sample.AboutUs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.aduino.propertyofss.arduinolearning.VIew.AboutUs"
        >

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:background="@drawable/gradientbackground"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="45dp"
                    app:srcCompat="@drawable/about1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="About Us"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="21dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="280dp"
                android:gravity="left|center"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="360dp"
                    android:layout_height="70dp"
                    android:layout_above="@+id/editText6"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="24dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="We created this application and the device for the 2nd year software development group project."
                    android:textColor="#000000"
                    android:textSize="18dp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="20dp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:text="We are a group of 4 Students"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="59dp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignStart="@+id/imageView2"
                    android:layout_below="@+id/textView2"
                    android:layout_marginTop="63dp"
                    android:adjustViewBounds="false"
                    app:srcCompat="@drawable/sithara"
                    android:layout_gravity="center_horizontal"
                    tools:layout_editor_absoluteX="31dp"
                    tools:layout_editor_absoluteY="169dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Sasindu Sithara" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignStart="@+id/imageView2"
                    android:layout_below="@+id/textView2"
                    android:layout_marginTop="63dp"
                    android:adjustViewBounds="false"
                    app:srcCompat="@drawable/isuru"
                    android:layout_gravity="center_horizontal"
                    tools:layout_editor_absoluteX="31dp"
                    tools:layout_editor_absoluteY="169dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Isuru Nimantha" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignEnd="@+id/textView2"
                    android:layout_alignTop="@+id/imageView"
                    android:layout_marginTop="50dp"
                    app:srcCompat="@drawable/disuru"
                    android:layout_gravity="center_horizontal"
                    tools:layout_editor_absoluteX="31dp"
                    tools:layout_editor_absoluteY="365dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Disuru Rathnayake" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignStart="@+id/imageView4"
                    android:layout_below="@+id/imageView4"
                    android:layout_marginTop="37dp"
                    app:srcCompat="@drawable/sanju"
                    android:layout_gravity="center_horizontal"
                    tools:layout_editor_absoluteX="253dp"
                    tools:layout_editor_absoluteY="365dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Sanju De Silva" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>

